{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"rules": {
		"object-curly-spacing": ["error", "always"],
		"react/react-in-jsx-scope": 0,
		"indent": [
			1,
			"tab"
		],
		"linebreak-style": [
			1,
			"unix"
		],
		"quotes": [
			1,
			"single"
		],
		"semi": [
			1,
			"always"
		],
		"arrow-parens": ["warn", "as-needed"],
		"comma-dangle": ["warn", "always-multiline"],
		"array-element-newline": ["warn", "consistent"],
		"react/prop-types": 0,
		"no-unused-vars": 1
	}
}
